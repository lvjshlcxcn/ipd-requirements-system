# Application Configuration
APP_NAME=IPD Requirements Management System
APP_VERSION=1.0.0
DEBUG=true

# API Configuration
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database
DATABASE_URL=postgresql://ipd_user:ipd_pass@localhost:5432/ipd_req_db

# Redis
REDIS_URL=redis://localhost:6379

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# ========== DeepSeek API ==========
DEEPSEEK_API_KEY=sk-your-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4000
DEEPSEEK_TEMPERATURE=0.3
DEEPSEEK_TIMEOUT=60

# ========== 文本洞察分析 ==========
INSIGHTS_MAX_TEXT_LENGTH=20000
INSIGHTS_ENABLE_CACHING=true
INSIGHTS_CACHE_TTL=3600
INSIGHTS_SEGMENT_THRESHOLD=15000
